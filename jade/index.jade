doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title
    link(href='css/ionic.app.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    script(src='lib/ionic/js/ionic.bundle.js')
    script(src='cordova.js')
    script(src='js/app.js')
    script(src='js/main_controller.js')
  body(ng-app='za-calculator', ng-controller='MainCtrl')
    .bar.bar-header.bar-positive
      h1.title ZCalc
    ion-content.has-header
      h1.title {{greeting}}
      .display {{display}}
      .button-bar
        a.button(ng-click='square()') x
              sup 2
        a.button.button-calm(ng-click='sinfunc()') sin
        a.button.button-calm(ng-click='cosfunc()') cos
        a.button.button-calm(ng-click='tanfunc()') tan
      .button-bar
        a.button(ng-click='root()') &radic;
          span(style='text-decoration: overline;') Â x
        a.button.button-calm(ng-click='asinfunc()') sin
              sup -1
        a.button.button-calm(ng-click='acosfunc()') cos
              sup -1
        a.button.button-calm(ng-click='atanfunc()') tan
              sup -1
      .button-bar
        a.button(ng-click='number(1)') 1
        a.button(ng-click='number(2)') 2
        a.button(ng-click='number(3)') 3
        a.button.button-royal(ng-click='calculate("/")') &div;
      .button-bar
        a.button(ng-click='number(4)') 4
        a.button(ng-click='number(5)') 5
        a.button(ng-click='number(6)') 6
        a.button.button-royal(ng-click='calculate("*")') &times;
      .button-bar
        a.button(ng-click='number(7)') 7
        a.button(ng-click='number(8)') 8
        a.button(ng-click='number(9)') 9
        a.button.button-royal(ng-click='calculate("+")') +
      .button-bar
        a.button(ng-click='number(0)') 0
        a.button
        a.button(ng-click='number(".")') .
        a.button.button-royal(ng-click='calculate("-")') -
      .button-bar
        a.button.button-balanced(ng-click='clearDisplay()') clear
        a.button.button-energized(ng-click='answer()') =
    .bar.bar-footer.bar-positive
      .center
        small &copy; 2014, Z. Ames
